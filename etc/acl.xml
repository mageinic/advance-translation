<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="MageINIC_Core::core">
                    <resource id="MageINIC_Translation::translation" translate="title" title="Translation"
                              sortOrder="10">
                        <resource id="MageINIC_Translation::translation_manage" translate="title" title="Translation"
                                  sortOrder="20">
                            <resource id="MageINIC_Translation::save" translate="title" title="Save" sortOrder="10"/>
                            <resource id="MageINIC_Translation::translation_delete" translate="title" title="Delete"
                                      sortOrder="20"/>
                            <resource id="MageINIC_Translation::translation_status" translate="title"
                                      title="Change Status" sortOrder="30"/>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="MageINIC_Core::core_config">
                                <resource id="MageINIC_Translation::config_translation"
                                          title="Translation Configuration"/>
                            </resource>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
